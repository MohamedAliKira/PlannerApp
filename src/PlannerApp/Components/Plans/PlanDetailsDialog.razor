@namespace PlannerApp.Components


<MudDialog>
    <TitleContent>
        @if (_isBusy)
        {
            <MudText Typo="Typo.h6">Loading Plan details ...</MudText>
        }
        else
        {
            <MudText Typo="Typo.h6">@_plan?.Title</MudText>
        }
    </TitleContent>
    <DialogContent>
        <MudGrid>
            <MudItem sm="12" md="5">
                <!-- Plan details go here-->
                @if (_isBusy)
                {
                    <MudSkeleton Animation="Animation.Wave" SkeletonType="SkeletonType.Rectangle"
                            Style="min-width: 250px" Height="40px" />                    
                    <MudSkeleton Animation="Animation.Wave" SkeletonType="SkeletonType.Text" Style="min-width: 250px"/>
                }
                else
                {
                    <img style="width:100%;border-radius:5px" src="@_plan.CoverUrl" />
                    <MudText Typo="Typo.body1">@_plan?.Description</MudText>
                }
            </MudItem>
            <MudItem sm="12" md="7">                
                @if (_isBusy)
                {
                   <MudSkeleton Animation="Animation.Wave" SkeletonType="SkeletonType.Text" Style="min-width: 250px"/>
                   <MudSkeleton Animation="Animation.Wave" SkeletonType="SkeletonType.Text" Style="min-width: 250px"/>
                   <MudSkeleton Animation="Animation.Wave" SkeletonType="SkeletonType.Text" Style="min-width: 250px"/>
                   <MudSkeleton Animation="Animation.Wave" SkeletonType="SkeletonType.Text" Style="min-width: 250px"/>
                   <MudSkeleton Animation="Animation.Wave" SkeletonType="SkeletonType.Text" Style="min-width: 250px"/>
                   <MudSkeleton Animation="Animation.Wave" SkeletonType="SkeletonType.Text" Style="min-width: 250px"/>
                }
                else
                {
                    <!-- Items go here-->
                    <CreateToDoItemForm PlanId="@PlanId" OnToDoItemAdded="OnToDoItemAddedCallback"/>
                    <ToDoItem />
                    <ToDoItem />
                    <ToDoItem />
                    <ToDoItem />
                    <ToDoItem />
                }
            </MudItem>
        </MudGrid>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Close">Close</MudButton>
    </DialogActions>
</MudDialog>

